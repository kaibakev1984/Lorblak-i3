# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	#status_command i3status
	status_command py3status -c ~/.i3/i3status.conf
  position top
#  separator_symbol ""
  #font pango: Font Awesome 5 Free Regular 10
#  font pango: SFNS Display UltraLight 10
  font pango: unifont:fontformat 8
  strip_workspace_numbers yes
	# bar colors	
	colors {
		background $bg-color
		separator  $separator-color
		#                  border                      background              text
		focused_workspace  $focused-border-bar-color   $focused-bg-bar-color   $focused-text-bar-color
		inactive_workspace $inactive-border-bar-color  $inactive-bg-bar-color $inactive-text-bar-color
		urgent_workspace   $urgent-border-bar-color    $urgent-bg-bar-color    $urgent-text--bar-color
	}
}

