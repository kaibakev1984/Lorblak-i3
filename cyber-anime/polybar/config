[module/hostname]
type = custom/script
interval = 256
format = "<label>"
format-foreground = ${colors.foreground}
format-background = ${colors.arrow2}
format-underline  = ${colors.background}
format-prefix = " "
format-padding = 2
exec = echo "$(uname -n)"
format-prefix-font = 2

[module/updates]
type = custom/script
exec = apt-get upgrade -s | grep -i security
format-foreground = ${colors.secondary}
interval = 1000
bel = %output:0:30:...%

[module/username]
type = custom/script
interval = 256
format = "<label>"
format-foreground = ${colors.foreground}
format-background= ${colors.arrow1}
format-underline = ${colors.background}
format-prefix = " "
format-padding = 2
exec = echo "$(whoami)"
format-prefix-font = 2

[module/info-kernel]
type = custom/script
interval = 1024
exec = uname -r
format = "<label>"
format-prefix = " "
format-background = ${colors.arrow3}
format-padding = 2


